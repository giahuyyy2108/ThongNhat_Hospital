@page "admin/user/set-pass/{id}"
@model ThongNhat_Hospital.Areas.Identity.Pages.Account.Manage1.SetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "Admin/_Dashboard";
}

<!-- Right side column. Contains the navbar and content of the page -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @*<section class="content-header">



    </section>*@

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Đặt lại mật khẩu</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <form role="form" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input asp-for="Input.NewPassword" class="form-control" />
                                @*<span asp-validation-for="Input.NewPassword" class="text-danger"></span>*@
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                @*<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>*@
                            </div>
                            @* <div class="form-group">
                            <label >Tên role</label>
                            <input asp-for="Input.UserName" class="form-control"  placeholder="Nhập tài khoản">
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>*@
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Tạo Role</button>
                        </div>
                    </form>
                </div><!-- /.box -->


            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->

</div><!-- /.content-wrapper -->


