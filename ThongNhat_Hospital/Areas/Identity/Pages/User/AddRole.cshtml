@page "admin/user/set-role/{id}"
@model ThongNhat_Hospital.Areas.Identity.Pages.Account.Manage1.AddRoleModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "Admin/_Dashboard";
}
@{

    

}

<!-- Right side column. Contains the navbar and content of the page -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @*<section class="content-header">



    </section>*@

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Thêm Role người dùng @Model.user.UserName</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" method="post">
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                @Html.ListBoxFor(m => m.Rolename, @Model.allRoles ,new {
                                    id = "id-select-role",
                                @class ="form-control"
                                })
                                <span asp-validation-for="Rolename" class="text-danger"></span>
                            </div>
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Thiết lập</button>
                        </div>
                    </form>
                </div><!-- /.box -->


            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->

</div><!-- /.content-wrapper -->



@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css"/>

    <script>
        $("#id-select-role").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}