@page "/admin/user/create"
@model ThongNhat_Hospital.Areas.Identity.Pages.User1.CreateModel
@{
    Layout = "Admin/_Dashboard";
}

<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Quick Example</h3>
    </div><!-- /.box-header -->
    <!-- form start -->
    <form role="form" method="post">
        <div class="box-body">
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control"  placeholder="Tên Role" type="email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Họ và Tên</label>
                <input asp-for="Input.Hoten" class="form-control" placeholder="Nhập họ tên">
                <span asp-validation-for="Input.Hoten" class="text-danger"></span>
            </div>
           @* <div class="form-group">
                <label >Tên role</label>
                <input asp-for="Input.UserName" class="form-control"  placeholder="Nhập tài khoản">
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>*@
        </div><!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Tạo Role</button>
        </div>
    </form>
</div><!-- /.box -->


