@model ThongNhat_Hospital.Models.PhieuGiaoHang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin/_Dashboard.cshtml";
}



<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    @*<section class="content-header">



    </section>*@

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Chỉnh sửa phiếu</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <form role="form" method="post">
                        <div class="box-body">
                            <div class="form-group">
                               
                                <input asp-for="ngaygiao" class="form-control hidden" />
                                <span asp-validation-for="ngaygiao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Ghi chú:</label>
                                <input asp-for="Note" class="form-control" />
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Loại hàng</label>
                                <select asp-for="Id_LoaiHang" class="form-control" asp-items="ViewBag.Id_LoaiHang"></select>
                                <span asp-validation-for="Id_LoaiHang" class="text-danger"></span>
                            </div>
                            @* <div class="form-group">
                            <label >Tên role</label>
                            <input asp-for="Input.UserName" class="form-control"  placeholder="Nhập tài khoản">
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>*@
                        </div><!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-success">Lưu</button>
                        </div>
                    </form>
                </div><!-- /.box -->


            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->

</div><!-- /.content-wrapper -->





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
