@using System.Globalization;
@model ThongNhat_Hospital.Models.ViewModel.PhieuViewModel


@{
    ViewData["Title"] = "Thông tin đơn hàng";
    Layout = "Admin/_Dashboard";
}

<!-- Right side column. Contains the navbar and content of the page -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        @*<div>
        <a href="./role/Create" class="btn btn-block btn-primary">Thêm Role</a>
        </div>*@


    </section>
    
    @foreach (var item in Model.CTphieu)
    {
        @if(item.Id_HinhThuc == "1")
        {
            <section class="invoice">
                <!-- title row -->
                <div class="row">
                    <div class="col-xs-12">
                        <h2 class="page-header">
                            <i class="fa fa-globe"></i> Bệnh viện Thống Nhất.
                            <small class="pull-right"> @DateTime.Now.ToString("dd/MM/yyyy H:mm",CultureInfo.GetCultureInfo("vi-VN"))</small>
                        </h2>
                    </div><!-- /.col -->
                </div>
                <!-- info row -->
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        Người gửi

                        <address>
                            <strong>@Model.nguoigui</strong><br>
                            @Model.email_usergui<br>
                            Ngày giao: @Model.ngay_usergui
                        </address>


                    </div><!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        Người nhận

                        <address>
                            <strong>@Model.nguoinhan</strong><br>
                            @Model.email_usernhan<br>
                            Ngày nhận: @Model.ngay_usernhan
                        </address>

                    </div><!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <br />
                        <b>Mã đơn hàng:</b> @item.Id_PhieuGiao<br />
                        <b>Ngày lập phiếu:</b> @item.phieugiao.ngaygiao.ToString("dd/MM/yyyy H:mm",CultureInfo.GetCultureInfo("vi-VN"))<br />
                        @*<b>Account:</b> 968-34567*@
                    </div><!-- /.col -->
                </div><!-- /.row -->
                <!-- Table row -->
                <div class="row">
                    <div class="col-xs-12 table-responsive">
                        <table class="table ">
                            <thead>
                                <tr>
                                    <th>    Chữ ký người gửi </th>
                                    <th>    Chữ ký người nhận </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <img src="@Model.chuky_usergui" width=400 height=200 />
                                    </td>
                                    <td>
                                        <img src="@Model.chuky_usernhan" width=400 height=200 />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div><!-- /.col -->
                </div><!-- /.row -->

                <div class="row">
                </div><!-- /.row -->
                <!-- this row will not appear when printing -->
                <div class="row no-print">
                    <div class="col-xs-12">
                        <a href="#" onclick="window.print()" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> In</a>
                        @*<button class="btn btn-success pull-right"><i class="fa fa-credit-card"></i> Submit Payment</button>
                        <button class="btn btn-primary pull-right" style="margin-right: 5px;"><i class="fa fa-download"></i> Generate PDF</button>*@
                    </div>
                </div>
            </section>

            <!-- /.content -->
        }
    }
    
    
</div><!-- /.content-wrapper -->
<!-- jQuery 2.1.3 -->
<script src="../../plugins/jQuery/jQuery-2.1.3.min.js"></script>
<!-- Bootstrap 3.3.2 JS -->
<script src="../../bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<!-- DATA TABES SCRIPT -->
<script src="../../plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
