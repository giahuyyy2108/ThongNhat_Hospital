                            </div>
                        </div>
                        <div class="col-md-12 box">

                            <div class="box-item" style="width: 50%;">
                                <div id="chartContainer" style="height: 270px; width: auto;"></div>
                            </div>
                            <div class="box-item" style="width: 50%;">
                                <div id="chartContainer1" style="height: 270px; width: auto;"></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="box">
                                <div class="box-item" style="width:100%">
                                    <table id="table1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    STT
                                                </th>
                                                <th>
                                                    Số phiếu
                                                </th>
                                                <th>
                                                    Ngày
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Note)
                                                </th>
                                                <th>
                                                    Loại hàng
                                                </th>
                                                <th>
                                                    Tình trạng
                                                </th>
                                                <th>

                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int stt = 1;
                                            }
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @stt
                                                    </td>
                                                    @{
                                                        stt += 1;
                                                    }
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Id)</a>
                                                    </td>
                                                    <td>
                                                        @item.ngaygiao.ToString("dd/MM/yyyy H:mm",CultureInfo.GetCultureInfo("vi-VN"))
                                                        @*@Html.DisplayFor(modelItem => item.ngaygiao)*@
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Note)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.loaihang.Name)
                                                    </td>
                                                    @if (item.tinhtrang == 0)
                                                    {
                                                        <td>
                                                            Chưa hoàn thành
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            Hoàn thành
                                                        </td>
                                                    }
                                                    <td>
                                                        <a asp-action="Details" asp-route-id="@item.Id">Chi Tiết</a> @*|*@
                                                        @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div><!-- /.col -->
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </section><!-- /.content -->
    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
</div>
