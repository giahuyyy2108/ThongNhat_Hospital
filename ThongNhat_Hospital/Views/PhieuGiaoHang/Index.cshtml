<!-- Right side column. Contains the navbar and content of the page -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        @*<div>
        <a href="./role/Create" class="btn btn-block btn-primary">Thêm Role</a>
        </div>*@


    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                   
                    <div class="box-body">
                        
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="box-item" style="width: 50%;">
                                        <div id="chartContainer" style="height: 270px; width: auto;"></div>
                                    </div>
                              
                            
                                    <div class="box-item" style="width: 50%;">
                                        <div id="chartContainer1" style="height: 270px; width: auto;"></div>
                                    </div>
                            </div>
                        </div>
                        

                      
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="box-item" style="width:100%">
                                        <table id="table1" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Số phiếu
                                                    </th>
                                                    <th>
                                                        Ngày
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Note)
                                                    </th>
                                                    <th>
                                                        Loại hàng
                                                    </th>
                                                    <th>
                                                        Tình trạng
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <a asp-action="Edit" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Id)</a>
                                                        </td>
                                                        <td>
                                                            @item.ngaygiao.ToString("dd/MM/yyyy H:mm",CultureInfo.GetCultureInfo("vi-VN"))
                                                            @*@Html.DisplayFor(modelItem => item.ngaygiao)*@
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Note)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.loaihang.Name)
                                                        </td>
                                                        @if (item.tinhtrang == 0)
                                                        {
                                                            <td>
                                                                Chưa hoàn thành
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>
                                                                Hoàn thành
                                                            </td>
                                                        }
                                                        <td>
                                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div><!-- /.box-body -->
                                </div><!-- /.box -->
                            </div><!-- /.col -->
                      
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!--/.col -->
        </div><!-- /.row -->

    </section><!-- /.content -->

</div><!-- /.content-wrapper -->



