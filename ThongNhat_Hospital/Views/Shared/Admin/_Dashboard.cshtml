                    </li>
                   
                    <li class="treeview ">
                        <a href="/PhieuGiaoHang/Index">
                            <i class="fa fa-table"></i> <span>Phiếu giao tài liệu</span>
                        </a>

                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
       
        
      @RenderBody()
        
      <footer class="main-footer">
        <div class="pull-right hidden-xs">
          <b>Version</b> 1.0
        </div>
        <strong>Copyright &copy; 2023 Vũ Quốc Gia Huy & Mã Phúc Huy.</strong>
      </footer>
    </div><!-- ./wrapper -->
